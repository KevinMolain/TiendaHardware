@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Cart Page</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @{double preciototal = 0.0; }
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id">Remove</a></td>
                <td>@item.Product.Id</td>
                <td>@item.Product.Nombre</td>
                <td>@item.Product.Precio</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Precio * item.Quantity)</td>
            </tr>
            preciototal += item.Product.Precio * item.Quantity;
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @preciototal
            </td>
        </tr>
    </table>
    <br>
    <a asp-controller="Home" asp-action="index">Continue Shopping</a>

</body>
</html>
